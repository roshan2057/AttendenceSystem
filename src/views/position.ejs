<%- include("./partial/navbar")%> <%- include('./partial/sidebar');%>
<h1 class="text-center">Position</h1>

<div class="flex justify-around">
    <div>
        <h1 class="text-center">Add new of Position</h1>

        <form class="bg-gray-100 rounded-lg p-5 flex flex-col justify-center ">
            <label>Add New Position</label>
            <input type="text" name="position" placeholder="Enter the new position">
            <input type="submit" value="Insert">
        </form>
    </div>
    <div>
        <h1>List of Position</h1>
        <table class="min-w-full">
            <thead class="bg-gray-200 border-b">
            <tr>
                <th scope="col"
                class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Sn</th>
                <th scope="col"
                class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Positon</th>
                <th scope="col"
                class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Action</th>
            </tr>
        </thead>
            <% position.forEach((p, index) => { %>
                <tr>
                    <td class="text-sm text-gray-900 font-light px-6 py-3 whitespace-nowrap"><%= index+1 %></td>
                    <td class="text-sm text-gray-900 font-light px-6 py-3 whitespace-nowrap"><%= p.position %></td>
                    <td class="text-sm text-gray-900 font-light px-6 py-3 whitespace-nowrap">Delete</td>
                </tr>
                <% }) %>
            
        </table>
    </div>
</div>

<%- include('./partial/footer');%>
